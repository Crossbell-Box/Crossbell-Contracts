{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-call-value": "warn",
    "avoid-low-level-calls": "warn",
    "avoid-tx-origin": "warn",
    "check-send-result": "error",
    "code-complexity": ["error", 7],
    "compiler-version": ["error", "^0.8.0"],
    "comprehensive-interface": "error",
    "const-name-snakecase": "off",
    "constructor-syntax": "error",
    "contract-name-camelcase": "error",
    "event-name-camelcase": "error",
    "explicit-types": ["warn","explicit"],
    "foundry-test-functions": ["off",["setUp" ]],
    "function-max-lines": ["warn",60],
    "func-name-mixedcase": "error",
    "func-named-parameters": "off",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "gas-custom-errors": "off",
    "gas-calldata-parameters": "warn",
    "gas-increment-by-one": "off",
    "gas-indexed-events": "off",
    "gas-length-in-loops": "off",
    "gas-named-return-values": "off",
    "gas-small-strings": "off",
    "gas-strict-inequalities": "off",
    "gas-struct-packing": "warn",
    "immutable-vars-naming": ["warn",{"immutablesAsConstants":true}],
    "imports-on-top": "warn",
    "imports-order": "off",
    "interface-starts-with-i": "warn",
    "max-line-length": ["error", 120],
    "max-states-count": ["warn",30],
    "modifier-name-mixedcase": "error",
    "named-parameters-mapping": "warn",
    "no-complex-fallback": "warn",
    "no-console": "error",
    "no-empty-blocks": "error",
    "no-global-import": "warn",
    "no-unused-import": "warn",
    "no-unused-vars": "error",
    "not-rely-on-time": "off",
    "ordering": "warn",
    "private-vars-leading-underscore": ["error",{"strict":true}],
    "quotes": ["error","double"],
    "reason-string": ["error",{"maxLength":64}],
    "reentrancy": "error",
    "state-visibility": "error",
    "use-forbidden-name": "error",
    "var-name-mixedcase": "error",
    "visibility-modifier-order": "error"
  }
}
